<div class="container">
  <h2>Sign In</h2>
  <form name="user" action="/users/signin" method="post">
    <input name="email" type="email" placeholder="enter email">
    <input name="password" type="password" placeholder="password">
    <input type="submit" value="Sign In">
  </form>
  <%if @invalid_login %>
  <h3 style="color:red">*** Either Your Username is Wrong, Your Password is Wrong, or Everything is Wrong. ***</h3>
  <% end %>
</div>
